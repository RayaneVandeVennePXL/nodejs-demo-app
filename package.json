{
  "name": "user-management-api",
  "version": "1.0.0",
  "description": "A lightweight Node.js Express-based REST API for managing users with in-memory data storage",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "lint": "echo 'Add ESLint configuration for linting'",
    "build": "echo 'No build step required for Node.js app'",
    "prod": "NODE_ENV=production node src/server.js",
    "health": "curl -f http://localhost:5000/users || exit 1"
  },
  "keywords": [
    "express",
    "api",
    "crud",
    "swagger"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-results.xml"
  },
  "jest": {
  "coverageDirectory": "coverage",
  "coverageReporters": ["clover", "text", "lcov"]
}
}
